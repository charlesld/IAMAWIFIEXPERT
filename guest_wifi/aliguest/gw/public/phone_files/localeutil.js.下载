define(function (require, exports) {
    var locale = require('i18n!nls/locale');
    var $ = require('jquery');
    exports.fillPlaceholder = function() {
        $('.opposite-lang-placeholder').html(locale.oppositeLang);
        $('.visitors-login-placeholder').html(locale.visitorsLogin);
        $('.phone-no-placeholder').html(locale.phoneNo);
        $('.captcha-placeholder').html(locale.captcha);
        $('.alibaba-group-placeholder').html(locale.alibabaGroup);
        $('.infomation-platform-placeholder').html(locale.infoPlatform);
        $('.get-captcha-placeholder').html(locale.getCaptcha);
        $('.login-placeholder').html(locale.login);
        $('.welcome-back-placeholder').html(locale.welcomeBack);
    }
});